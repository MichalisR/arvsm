<div class="container">
    <div class="row vertical-offset-100">
    	<div class="page-header text-center">
    		<h1>AVRSM</h1>
    		<h2>Absence Request and Vacation Schedule Management System</h2>
    	</div>
    	<div class="col-md-4 col-md-offset-4">
    		<div class="text-center">
    			<%= flash_messages %>
    		</div>
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Please sign in</h3>
			 	</div>
			  	<div class="panel-body">
			  		<%= form_tag do%>
                    <fieldset>
			    	  	<div class="form-group">
			    	  	 	<%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'E-mail' %>
			    		</div>
			    		<div class="form-group">
			    			<%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password' %>
			    		</div>
			    		<%= submit_tag "Login", class: 'btn btn-lg btn-success btn-block' %>
			    	</fieldset>
			    	<% end %>
			    </div>
			</div>
		</div>
	</div>
</div>